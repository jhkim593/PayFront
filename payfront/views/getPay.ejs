<script>


function getPayFunc() {

	   var payId=$("#payId").val();
        $.ajax({
            url: "http://localhost:8080/pay/"+payId,
            type: 'GET',
						dataType: "JSON",
            success: function (data) {
							  console.log(data.data);
							  alert(data.responseMessage);

            },
            error: function (xhr, status) {
							alert(xhr.responseJSON.responseMessage);
							location.reload();
            }
        });
      return false;


}
